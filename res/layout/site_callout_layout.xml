<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/site_title"
		android:textSize="16dip" android:textColor="#FF000000"
		android:paddingBottom="5dip"/>
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:id="@+id/site_subtitle" android:layout_below="@+id/site_title"
		android:textSize="14dip" android:textColor="#FF000000"/>
</RelativeLayout>