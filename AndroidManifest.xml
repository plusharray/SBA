<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.sbasite.sbasites"
      android:versionCode="25"
      android:versionName="2.0">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>

    <uses-permission android:name="android.permission.INTERNET" />
		<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
		<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

<uses-feature android:glEsVersion="0x00020000" android:required="true"/> 
    <application android:icon="@drawable/ic_72x72" android:theme="@style/Theme.GDCatalog" android:label="@string/app_name" android:name=".sbasites.app.SBAApplication">
        <activity android:name="com.sbasite.activity.SBASitesActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
			<meta-data android:name="android.app.default_searchable"
				android:value=".activity.SearchListActivity" />
        </activity>
		<activity android:label="@string/instructions"
			android:screenOrientation="portrait" android:name="com.sbasite.activity.Instructions">
		</activity>
		<activity android:label="@string/layers"
			android:screenOrientation="portrait" android:name="com.sbasite.activity.Layers"
			android:theme="@style/Theme.OTweet">
		</activity>
		<activity android:label="@string/list_view"
			android:screenOrientation="portrait" android:name="com.sbasite.activity.SiteListActivity"
			android:theme="@style/Theme.OTweet">
		</activity>
		<activity android:label="@string/site_detail_activity"
			android:screenOrientation="portrait" android:name="com.sbasite.activity.SiteDetailActivity"
			android:theme="@style/Theme.OTweet">
		</activity>
		<activity android:label="@string/site_name_id"
			android:screenOrientation="portrait" android:name="com.sbasite.activity.SearchSiteNameAddress">
		</activity>
		<activity android:label="@string/coordinates"
			android:screenOrientation="portrait" android:name="com.sbasite.activity.SearchCoordinates">
		</activity>
		<activity android:screenOrientation="portrait" android:name="com.sbasite.activity.SearchAddress"
			android:label="@string/address">
		</activity>
		<activity android:label="@string/about_sba_communications"
			android:screenOrientation="portrait" android:name="com.sbasite.activity.AboutSbaCommunications">
		</activity>
		<activity android:label="Search" android:screenOrientation="portrait"
			android:launchMode="standard" android:name="com.sbasite.activity.SearchListActivity"
			android:theme="@style/Theme.OTweet">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
			<meta-data android:name="android.app.default_searchable"
				android:value=".activity.SearchListActivity" />
		</activity>
		<activity android:label="Site Image" android:name=".sbasites.activity.SiteImageViewActivity"
			android:screenOrientation="portrait">
		</activity>
    </application>
</manifest>